<%-include ('partials/_header', {active: "devoluciones"}); %>
<div class="container">
  <div class="row row-no-margin my-4">
    <!--title page-->
    <h2 class="text-primary-blue">
      Devoluciones
    </h2>
    <!--//title page-->
  </div>
  <div class="row filter-tools my-4 row-no-margin">
    <!--input movies-->
    <input
      type="text"
      class="form-control d-inline w-50 text-center"
      placeholder="Ingrese el nombre de la pelicula o actor"
    />
    <!--//input movies-->
    <!--dropwdown genero-->
    <div class="dropdown ml-3">
      <!--dropdown principal-->
      <a
        class="btn dropdown-toggle"
        href="#"
        role="button"
        id="dropdownMenuLink"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
      >
        Genero
      </a>
      <!--//dropdown principal-->
      <!--drop item-->
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item">Opcion 1</a>
        <a class="dropdown-item">Opcion 2</a>
        <a class="dropdown-item">Opcion 3</a>
      </div>
      <!--//drop item-->
    </div>
    <!--//dropwdown genero-->
    <!--dropwdown oscar prize's-->
    <div class="dropdown ml-3">
      <!--dropdown principal-->
      <a
        class="btn dropdown-toggle"
        href="#"
        role="button"
        id="dropdownMenuLink"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
      >
        Premios Oscar's
      </a>
      <!--//dropdown principal-->
      <!--drop item-->
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item">Premio 1</a>
        <a class="dropdown-item">Premio 2</a>
        <a class="dropdown-item">Premio 3</a>
      </div>
      <!--//drop item-->
    </div>
    <!--//dropwdown oscar prize's-->
  </div>
  <!--table-->
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-blue">
        <tr class="text-white text-center">
          <th scope="col">Codigo</th>
          <th scope="col">Fecha de renta</th>
          <th scope="col">Fecha de Devoluci√≥n</th>
          <th scope="col">Cliente</th>
          <th scope="col">Estado</th>
          <th scope="col">Devolver</th>
        </tr>
      </thead>
      <tbody>
        <% if(data){ %> <% for (var i=0 ; i< data.length ; i++){ %>
        <tr class="text-center">
          <th><%=data[i].id_rental%></th>
          <td><%=data[i].start_date%></td>
          <td><%=data[i].devolution_date%></td>
          <td><%=data[i].first_name+' '+data[i].fathers_last_name+' '+data[i].mothers_last_name%></td>
          <td><%=data[i].status_name%></td>
          <td>
            <button
              class="btn bg-primary-blue text-light"
              data-toggle="modal"
              data-target="#returnVideo"
            >
              Devolver
            </button>
          </td>
        </tr>
        <%}}%>
      </tbody>
    </table>
    <!--//table-->
  </div>
</div>
<!--Modals-->
<div class="modal fade" id="returnVideo" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title ">Devolucion de Pelicula</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="">
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center">
                Codigo de Pelicula Rentada :
              </div></label
            >
            <input
              type="number"
              class="form-control text-center col-3"
              id="codigoRenta"
              placeholder="Codigo"
            />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">
          Registrar Devolucion<i class="fas fa-check ml-2"></i>
        </button>
      </div>
    </div>
  </div>
</div>
<!--//modals-->
<%-include ('partials/_footer')%>
