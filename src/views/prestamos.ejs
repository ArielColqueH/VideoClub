<%-include ('partials/_header', {active: "prestamos"}); %> 
<div class="container ">
  <div class="row row-no-margin my-4">
    <!--title page-->
    <h2 class="text-primary-blue">
      Catalogo de Peliculas Disponibles
    </h2>
    <!--//title page-->
    <!--cart icon-->
    <a href="/prestamos/carrito" class="cart ml-auto">
      <i class="fas fa-shopping-cart fa-3x "></i>
      <h1 class="d-inline ml-3"><%=0%></h1>
    </a>
    <!--//cart icon-->
  </div>

  <div class="row filter-tools my-4 row-no-margin">
    <form action="/prestamos/searchWord" method="post" class="input-group w-50">
      <!--search-->
      <!--input movies-->
      <input
        type="text"
        class="form-control d-inline  text-center"
        name="word"
        placeholder="Ingrese el nombre de la pelicula"
      />
      <!--//input movies-->
      <!--btn search-->
      <button class="btn btn-primary input-group-append">
        <i class="fas fa-search"></i>
      </button>
      <!--//btn search-->

      <!--//search-->
    </form>

    <!--dropwdown genero-->
    <div class="dropdown show ml-3">
      <a
        class="btn dropdown-toggle"
        href="#"
        role="button"
        id="dropdownMenuLink"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
      >
        Genero
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <% if(data2){ %> <% for (var i=0 ; i< data2.length ; i++){ %>
        <a class="dropdown-item" href="/prestamos/<%= data2[i].genre %>"
          ><%= data2[i].genre %></a
        >
        <% } %> <% } %>
      </div>
    </div>
    <!--//dropwdown genero-->
  </div>
  <!--table-->
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-blue">
        <tr class="text-white text-center">
          <th scope="col">Codigo</th>
          <th scope="col">Nombre de Pelicula</th>
          <th scope="col">Genero</th>
          <th scope="col">Actores/Actrices</th>
          <!--<th scope="col">Nom. al Oscar</th>-->
          <!--<th scope="col">Fecha de Registro</th>-->
          <th scope="col">Disponibles</th>
          <!--  <th scope="col">Cantidad</th>-->
          <th scope="col">Añadir</th>
        </tr>
      </thead>
      <tbody>
        <% if(data){ %> <% for (var i=0 ; i< data.length ; i++){ %>
        <tr class="text-center">
          <td><%= data[i].id_video %></td>
          <td><%= data[i].video_title %></td>
          <td><%= data[i].genre %></td>
          <td><%= data[i].first_name +' '+data[i].last_name %></td>
          <td><%= data[i].stock %></td>
          <td>
            <a
              class="btn bg-primary-blue text-light"
              href="/prestamos/carrito/add/<%=data[i].id_video%>"
              >Añadir</a
            >
          </td>
        </tr>
        <% } %> <% } %>
      </tbody>
    </table>
    <!--//table-->
  </div>
</div>
<%-include ('partials/_footer')%>
