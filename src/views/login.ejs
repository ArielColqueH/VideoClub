<%-include ('partials/_navLogin'); %>

<div class="container my-5">
  <div class="col-md-9 mx-auto">
    <div class="card ">
      <div class="card-body">
        <h3 class="card-title text-center my-3 text-primary-blue">
          Ingresar con tu usuario y contraseña
        </h3>
        <div class="row ">
          <i
            class="fas fa-user-circle fa-9x mx-auto my-3 text-primary-blue"
          ></i>
        </div>
        <form class="px-5" action="/signin" method="POST">
          <div class="form-group">
            <label for="userName">Usuario :</label>
            <input
              type="text"
              class="form-control text-center"
              id="userName"
              placeholder="Nombre de usuario"
            />
          </div>
          <div class="form-group">
            <label for="userPassword">Contraseña :</label>
            <input
              type="password"
              class="form-control text-center"
              id="userPassword"
              placeholder="Contraseña"
            />
          </div>
          <div class="row">
            <button type="submit" class="btn btn-primary mx-auto">
              Ingresar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%-include ('partials/_footer')%>
