<%-include ('partials/_header', {active: "clientes"}); %>
<div class="container">
  <div class="row row-no-margin my-4">
    <!--title page-->
    <h2 class="text-primary-blue">
      Clientes Registrados
    </h2>
    <!--//title page-->
  </div>
</div>
<!--table-->
<div class="table-responsive px-3">
  <table class="table table-hover">
    <thead class="thead-blue">
      <tr class="text-white text-center">
        <th scope="col">Codigo</th>
        <th scope="col">Nombre</th>
        <th scope="col">Apellido P</th>
        <th scope="col">Apellido M</th>

        <th scope="col">Telefono</th>
        <th scope="col">Correo</th>
        <th scope="col">Fecha de Nacimiento</th>
        <th scope="col">Direccion</th>
        <th scope="col">Fecha Registro</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if(data){ %> <% for (var i=0 ; i< data.length ; i++){ %>
      <tr>
        <td><%= data[i].id_client %></td>
        <td><%= data[i].first_name %></td>
        <td><%= data[i].fathers_last_name %></td>
        <td><%= data[i].mothers_last_name %></td>
        <td><%= data[i].cellphone_number %></td>
        <td><%= data[i].mail %></td>
        <td><%= data[i].date_of_birth %></td>
        <td><%= data[i].address %></td>
        <td><%= data[i].registation_date %></td>
        <td>
          <a
            href="/clientes/update/<%= data[i].id_client %>"
            class="btn btn-primary"
            >Editar</a
          >
        </td>
      </tr>
      <% } %> <% } %>
    </tbody>
  </table>
  <!--//table-->
</div>
<div class="container mb-5">
  <div class="row row-no-margin">
    <button
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#addCliente"
    >
      Agregar Clientes<i class="fas fa-plus ml-2"></i>
    </button>
  </div>
</div>

<!--Modals-->
<!--agregar cliente modal-->
<div class="modal fade" id="addCliente" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title ">Agregar Clientes</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/clientes/add" method="post">
          <!--Nombre-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Nombre :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="nombre"
              name="first_name"
              placeholder="Nombre"
            />
          </div>
          <!--//Nombre-->
          <!--Apellido P-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Apellido Paterno :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="apellidoPaterno"
              placeholder="Apellido Paterno"
              name="fathers_last_name"
            />
          </div>
          <!--//Apellido P-->
          <!--Apellido M-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Apellido Materno :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="apellidoMaterno"
              placeholder="Apellido Materno"
              name="mothers_last_name"
            />
          </div>
          <!--//Apellido M-->
          <!--Carnet ID-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Carnet :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="carnetId"
              name="id_client_card"
              placeholder="Carnet ID"
            />
          </div>
          <!--//Apellido Materno-->
          <!--Telefono-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Telefono :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="Telefono"
              placeholder="Telefono"
              name="cellphone_number"
            />
          </div>
          <!--//Telefono-->
          <!--Correo-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Correo :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="Correo"
              placeholder="Correo"
              name="mail"
            />
          </div>
          <!--//Correo-->
          <!--Fecha de nacimiento-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Fecha de nacimiento :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="fecha_nacimiento"
              placeholder="Fecha de Nacimiento"
              name="date_of_birth"
            />
          </div>
          <!--//Fecha de nacimiento-->
          <!--Direccion-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Direccion :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="direccion"
              placeholder="Direccion"
              name="address"
            />
          </div>
          <!--//Direccion-->
          <!--Longitud-->
          <div class="form-group row row-no-margin mt-3">
            <label for="longitud" class="col"
              ><div class="text-center center">
                Longitud :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="longitud"
              placeholder="Longitud"
              name="longitude_address"
            />
          </div>
          <!--//Longitud-->
          <!--Latitud-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Latitud :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="latitud"
              placeholder="latitud"
              name="latitude_address"
            />
          </div>
          <!--//Latitud-->
          <!--Fecha Registro-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Fecha Registro :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="fechaRegistro"
              placeholder="Fecha Registro"
              name="registation_date"
            />
          </div>
          <!--//Fecha Registro-->
          <!--Nombre para la factura-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Nombre para la factura :
              </div></label
            >
            <input
              type="text"
              class="form-control text-center col-6"
              id="nombre_factura"
              placeholder="Nombre para la factura"
              name="invoice_name"
            />
          </div>
          <!--//Nombre para la factura-->
          <!--Nit-->
          <div class="form-group row row-no-margin mt-3">
            <label for="codigoRenta" class="col"
              ><div class="text-center center">
                Nit :
              </div></label
            >
            <input
              type="number"
              class="form-control text-center col-6"
              id="Nit"
              placeholder="Nit"
              name="invoice_nit"
            />
          </div>
          <!--//Nit-->
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">
              Guardar Cliente<i class="fas fa-check ml-2"></i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!--//agregar cliente modal-->
<!--//modals-->
<%-include ('partials/_footer')%>
