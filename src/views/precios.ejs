<%-include ('partials/_header', {active: "precios"}); %>
<div class="container">
  <div class="row row-no-margin my-4">
    <!--title page-->
    <h2 class="text-primary-blue">
      Precios
    </h2>
    <!--//title page-->
  </div>
  
  <!--table-->
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-blue">
        <tr class="text-white text-center">
          <th scope="col">Código</th>
          <th scope="col">Nro. de Días</th>
          <th scope="col">Precio (Bs.)</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
          <% if(data){ %> <% for (var i=0 ; i< data.length ; i++){ %>
            <tr class="text-center">
              <td><%= data[i].id_rate %></td>
              <td><%= data[i].time_rate %></td>
              <td><%= data[i].cost %></td>
          <td>
            <button class="btn bg-primary-blue text-light"
                data-toggle="modal"
                data-target="#editPrice">
                Editar
            </button>
          </td>
        </tr>
        <% } %> <% } %>
      </tbody>
    </table>
    <!--//table-->
  </div>
</div>
<%-include ('partials/_footer')%>
<!--Editar precio modal-->
<div class="modal fade" id="editPrice" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title ">Editar Precio</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="">
            <!--Número de Días-->
            <div class="form-group row row-no-margin mt-3">
              <label for="codigoRenta" class="col"
                ><div class="text-center center">
                  Nro. de Días :
                </div></label>
              <input
                type="number"
                class="form-control text-center col-6"
                id="number_days"
                placeholder="Días"
              />
            </div>
            <!--//-Número de Días-->
             <!--Precio-->
             <div class="form-group row row-no-margin mt-3">
                <label for="codigoRenta" class="col"
                  ><div class="text-center center">
                   Precio (Bs.):
                  </div></label
                >
                <input
                  type="number"
                  class="form-control text-center col-6"
                  id="price"
                  placeholder="Precio"
                />
              </div>
              <!--//Precio-->         
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">
            Guardar Datos Editados<i class="fas fa-check ml-2"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
  <!--Editar precio Modal-->
  <%-include ('partials/_footer')%>